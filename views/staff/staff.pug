extends ../layout

block content
  main 
    div.content-header
      h2 Staff Directory
      a(href='/staff/create'): button.crud-btn NEW STAFF
    br
    hr
    section
    if staffList.length > 0
      table
        tr
          th #
          th Name
          th Sport 
          th Designation
        for staff,index in staffList 
          tr
            td.align-center #{index+1}
            td: a(href=staff.url) #{staff.fullname}
            td.align-center: a(href=staff.sporturl) #{staff.sportname}
            td #{staff.designation}
    else 
      p There are no staff in the database

