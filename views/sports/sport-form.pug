extends ../layout

block content
  main 
    div.content-header
      if title
        h2 #{title}
      else
        h2 New Sport
    br
    hr
    section
      form(method='POST')
        label(for='sport-name') Name: 
        if duplicateError
          input#sport-name(required type='text' name='sportName' value=(sport===undefined? '': sport.name))
          p.error-msg #{duplicateError}
        else
          input#sport-name(required type='text' name='sportName' value=(sport===undefined? '': sport.name))
          
        label(for='password') Password: 
        input#password(required type='password' name='password')
        if errors 
          each error in errors 
            ul 
              li.error-msg #{error.msg}
        div.crud-btn-container
          button(type='submit').crud-btn Submit
          a(href='/sports/#{sport._id}'): button(type='button').del-btn.crud-btn Cancel