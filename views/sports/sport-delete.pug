extends ../layout

block content
  main 
    div.content-header
       h2 Delete Sport - #{sport.name}
    br
    hr
    section
      form(method='POST')
        label(for='password') Password: 
        input#password(required type='password' name='password')
        if errors 
          each error in errors 
            if error.path === 'password'
              ul 
                li.error-msg #{error.msg}
        div.crud-btn-container
          button(type='submit').crud-btn Delete Sport
          a(href=`/sports/${sport._id}`): button(type='button').del-btn.crud-btn Cancel
