extends ../layout

block content
  main 
    div.content-header
      h2 Athletes' Directory
      a(href='/athletes/create'): button.crud-btn NEW ATHLETE
    br
    hr
    section
    if athletes.length > 0
      table
        tr
          th #
          th Name
          th Sex 
          th Height (cm) 
          th Weight (kg) 
          th Sport 
          th Date of Birth
        for athlete,index in athletes 
          tr
            td.align-center #{index+1}
            td: a(href=athlete.url) #{athlete.fullname}
            td.align-center #{athlete.sex}
            td.align-center #{athlete.height}
            td.align-center #{athlete.weight}
            td.align-center: a(href=athlete.sporturl) #{athlete.sportname}
            td.align-center #{athlete.dateofbirthformatted}
    else
      p There are no athletes in the database
